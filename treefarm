--v1
--check if sapling
--bonemeal if true
--chop if oak-log

function checkFront()
  local something, data = turtle.inspect()
  if something then
    if string.find(data.name, "sapling") then 
      return "sapling"
    elseif string.find(data.name, "log") then
      return "log"
    else
      return false
    end
  end
end

function bonemeal()
  local stillSapling = checkFront() == "sapling"
  local bonemealFound = false
  while stillSapling do
    if bonemealFound == false then
      for a=1,16 do
        turtle.select(a)
        local data = turtle.getItemDetail()
        if string.find(data.name, "bonemeal") then
          bonemealFound = true
          a = 16
          break
        else
          print("nothing")
        end
        print("end of if2")
      end
      print("no more bonemeal!")
      os.exit()
    else
      turtle.place()
      if turtle.getItemCount() == 0 then
        bonemealFound = false
      end
    end
    print("end of loop1")
  end
end

function chopchop()
  while checkFront() == "log" do
    turtle.dig()
  end
  for a=1,16 do
    turtle.select(a)
    local data = turtle.getItemDetail()
    if data then
      if string.find(data.name, "sapling") then
        turtle.place()
      end
    end
  end
end

while turtle.getFuelLevel() > 10 do
  bonemeal()
  chopchop()
end
